<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/backgroundpage"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails.Details1">


    <TextView
        android:id="@+id/text_view_name_meetingChildrenCountDatabase1"
        android:padding="20dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:text="Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_circle_meetingDetails1"
        android:layout_below="@+id/text_view_name_meetingChildrenCountDatabase1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_meetingDetails1"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_view_name_meetingChildrenCountDatabase1"
        android:layout_height="match_parent"
    />

</RelativeLayout>