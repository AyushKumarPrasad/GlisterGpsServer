<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:background="@mipmap/backgroundpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/userimage"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtPhone"
            android:maxLength="10"
            android:hint="Username"
            android:text="SATACHI"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="90dp"
            android:background="@mipmap/username"
            android:fontFamily="@font/open_sans_light"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edtPassword"
            android:maxLength="20"
            android:textAlignment="center"
            android:hint="Password"
            android:text="Balya@2019"
            android:fontFamily="@font/open_sans_light"
            android:background="@mipmap/password"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"  />
        <Button
            android:id="@+id/btnSignIn"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_light"
            android:text="Login"
            android:textSize="20sp"
            android:background="@mipmap/loginbutton"
            android:textAllCaps="false"
            android:layout_marginBottom="30dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <com.rey.material.widget.CheckBox
            android:id="@+id/chkRemember"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/open_sans_light"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#2382B1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Remember Me"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <!--     <TextView
                 android:id="@+id/txtForgotPwd"
                 android:textColor="@android:color/white"
                 android:visibility="invisible"
                 android:text="@string/forgot_pwd"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />   -->
    </LinearLayout>

    <TextView
        android:background="@mipmap/bottomline"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <TextView
        android:text="SATACHI Global Pvt. Ltd."
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

