<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardViewColor"
    android:background="@mipmap/editbackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
  <!--          <TextView
                android:id="@+id/order_id"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="#111111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />  -->
            <TextView
                android:textColor="@color/DisplayDetails"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans_light"
                android:background="@mipmap/loginbutton"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Attendance Date"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="50dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/retrieve_date"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/DisplayDetails"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_light"
                android:background="@mipmap/loginbutton"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Attendance Time"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="50dp"
                android:gravity="center" />
            <TextView
                android:id="@+id/retrieve_time"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/DisplayDetails"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_light"
                android:background="@mipmap/loginbutton"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Attendance Status"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="50dp"
                android:gravity="center" />
            <TextView
                android:id="@+id/retrieve_status"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
            <TextView
                android:textColor="@color/DisplayDetails"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_light"
                android:background="@mipmap/loginbutton"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Attendance Location"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="50dp"
                android:gravity="center" />
            <TextView
                android:id="@+id/retrieve_location"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />
            <TextView
                android:textColor="@color/DisplayDetails"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/open_sans_light"
                android:background="@mipmap/loginbutton"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Attendance Location"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="50dp"
                android:gravity="center" />
            <TextView
                android:id="@+id/retrieve_targetArea"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Target Area"
                android:layout_width="match_parent"
                android:layout_height="60dp"  />
            <ImageView
                android:background="@mipmap/loginbutton"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear1"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnEdit"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/loginbutton"
            android:text="Edit"
            android:fontFamily="@font/open_sans_light"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRemove"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Remove"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>






