<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@mipmap/backgroundpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:focusable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/enter"
        android:text="Attendance"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/gpsUser"
        android:text="Location"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/gpsMeetingDetails"
        android:text="Meeting Details"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/leaveDetails"
        android:text="Leave Info"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/batteryLife"
        android:text="Battery Life"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/profile"
        android:text="Users Profile"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/productsList"
        android:text="Products"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>